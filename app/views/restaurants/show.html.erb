<h1><%= @restaurant.name %></h1>

<p>Address : <%=  @restaurant.address %></p>
<p>Phone number : <%= @restaurant.phone_number %></p>
<p>Category : <%= @restaurant.category %></p>
<p>Ratings : <%= @restaurant.rating %></p>

<div class="container">
    <p><strong>Reviews</strong></p>
    <ul>
        <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item">
            <%= review.content %>
            <div class="text-end"><%= link_to "Delete", restaurant_review_path(@restaurant, review), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></div>
            <p class="text-center">Your rating : <%= review.note %></p>
        </li>
        <% end %>
    </ul>
</div>